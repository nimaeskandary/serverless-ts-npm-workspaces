{
    "compilerOptions": {
        "incremental": true,
        "target": "ES6",
        "module": "commonjs",
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": { // https://www.typescriptlang.org/tsconfig#paths
            "@/handlers/*": ["packages/handlers/src/*"],
            "@/logger/*": ["packages/logger/src/*"],
        },
        "outDir": "build"
    },
    "include": [
        "packages/*/src/**/*.ts",
        "packages/*/tests/**/*.ts"
    ]
}