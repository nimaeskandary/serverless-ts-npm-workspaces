{
    "compilerOptions": {
        "incremental": true,
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declarationMap": true,
        "declaration": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": { // https://www.typescriptlang.org/tsconfig#paths
            "@/handlers/*": ["packages/handlers/src/*"],
            "@/logger/*": ["packages/logger/src/*"],
            "@/error/*": ["packages/error/src/*"]
        }
    }
}
