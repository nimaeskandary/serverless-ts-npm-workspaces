{
    "compilerOptions": {
        "incremental": true,
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declarationMap": true,
        "declaration": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@serverless-ts-npm-workspaces/handlers/*": [
                "packages/handlers/src/*"
            ],
            "@serverless-ts-npm-workspaces/logger/*": [
                "packages/logger/src/*"
            ],
            "@serverless-ts-npm-workspaces/error/*": [
                "packages/error/src/*"
            ],
            "@serverless-ts-npm-workspaces/handler-converters/*": [
                "packages/handler-converters/src/*"
            ]
        }
    }
}